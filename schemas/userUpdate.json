{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://example.com/example.json",
	"type": "object",
	"properties": {
		"display_name": {
			"type": "string",
			"minLength": 1,
			"maxLength": 25
		},
		"password": {
			"type": "string",
			"minLength": 5,
			"maxLength": 25
		},
		"firstName": {
			"type": "string",
			"minLength": 1,
			"maxLength": 30
		},
		"lastName": {
			"type": "string",
			"minLength": 1,
			"maxLength": 30
		}
	},
	"additionalProperties": false,
	"required": [ "displayName", "password", "firstName", "lastName" ]
}
