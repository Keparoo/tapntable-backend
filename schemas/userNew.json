{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://example.com/example.json",
	"type": "object",
	"properties": {
		"username": {
			"type": "string",
			"minLength": 1,
			"maxLength": 25
		},
		"password": {
			"type": "string",
			"minLength": 4,
			"maxLength": 25
		},
		"pin": {
			"type": "integer",
			"minLength": 4,
			"maxLength": 10
		},
		"display_name": {
			"type": "string",
			"minLength": 1,
			"maxLength": 15
		},
		"firstName": {
			"type": "string",
			"minLength": 1,
			"maxLength": 30
		},
		"lastName": {
			"type": "string",
			"minLength": 1,
			"maxLength": 30
		}
	},
	"additionalProperties": false,
	"required": [
		"username",
		"password",
		"pin",
		"displayName",
		"firstName",
		"lastName"
	]
}
